	<div   class="same"  align="center" >

<h4>   Enter Employee Name:<h4> 

<div class="input-group">
<input type="text" label="Employee name" class="form-control"  width="20%"  placeholder="Search Employee" name="search">
    <div class="input-group-btn"> 
       <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
 </div> 
    </div>

	</div>
<div id= "list" style="display:none;" align="center">
<br/><br/>
</div>
<script>
$('.btn').click(function(){

var name = $('input:text[name=search]').val();
$.ajax({
        url:"/emp_list_show?from="+'search'+'&name='+name,
         async: false,
          success: function(result){
          	
            $('#list').show();
            $('#list').html(result);
}});


});

</script>
