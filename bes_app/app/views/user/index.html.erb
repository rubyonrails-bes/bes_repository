<div class="login-form-block">
<%= form_for User.new, :url => :user_create do |f| %>
<div class="logo" > 
        <img src="logo.png" alt="logo" >  
  </div>
 <div class="container" border="1">
  <%= f.label :Username  %><br />
  <%= f.text_field :username  %>
   <%= f.label :Email  %><br />
  <%= f.text_field :email  %>
  <%= f.label :Password%>
   <%= f.password_field :encrypted_password %>
   <text><b>Confirm <b></text><%= f.label :Password %>
   <%= f.password_field :password_confirmation %></br>
 <%= f.submit :Register, class: 'btn btn-primary' , style: 'width:100%;' %>
<% f.submit :Cancel, class: 'btn btn-danger', style: 'width:49%;' %></br></br>
</div>
